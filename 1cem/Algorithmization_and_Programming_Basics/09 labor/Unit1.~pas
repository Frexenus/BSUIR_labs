unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ComCtrls, ExtCtrls, StdCtrls, Buttons;

type
  TForm1 = class(TForm)
    PageControl1: TPageControl;
    Graph: TTabSheet;
    Label1: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Button1: TButton;
    Button2: TButton;
    TabSheet1: TTabSheet;
    Image1: TImage;
    BitBtn1: TBitBtn;
    TabSheet2: TTabSheet;
    Label5: TLabel;
    TrackBar1: TTrackBar;
    Label6: TLabel;

    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var ab,ac,bc:integer;
begin
ab:=strtoint(edit1.text);
bc:=strtoint(edit2.text);
ac:=strtoint(edit3.text);

if (ac+bc>ab) and (ab+bc>ac) and (ac+ab>bc) then
showmessage('ok, now click GRAPH')
else
showmessage('Reenter sides')
end;

procedure TForm1.Button2Click(Sender: TObject);
var ab,ac,bc,xmax,ymax:extended;
begin
  ab:=strtoint(edit1.text);
  bc:=strtoint(edit2.text);
  ac:=strtoint(edit3.text);
  case trackbar1.Position of
  1 : begin ab:=ab/100; ac:=ac/100; bc:=bc/100;  end;
  2 : begin ab:=ab/25; ac:=ac/25; bc:=bc/25; end;
  3 : begin ab:=ab/10; ac:=ac/10; bc:=bc/10; end;
  4 : begin ab:=ab/2; ac:=ac/2; bc:=bc/2; end;
  6 : begin ab:=ab*2; ac:=ac*2; bc:=bc*2; end;
  7 : begin ab:=ab*4; ac:=ac*4; bc:=bc*4; end;
  8 : begin ab:=ab*8; ac:=ac*8; bc:=bc*8; end;
  9 : begin ab:=ab*16; ac:=ac*16; bc:=bc*16; end;
  10 : begin ab:=ab*32; ac:=ac*32; bc:=bc*32; end;
  end;
  ab:=round(ab);
  bc:=round(bc);
  ac:=round(ac);
with image1.canvas do
begin
  showmessage('Now go to the graph page');
  pen.color:=clRed;
  Brush.color:=clRed;
  Pen.Width:=2;
  xmax:=Image1.Width;
  ymax:=Image1.Height;
  moveto (210,150);
  lineto(210,150);
end;
end;



end.
